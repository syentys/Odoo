<?xml version="1.0" encoding= "utf-8"?>

<odoo>
    <data>
      

       
        <record model="ir.actions.act_window" id="contacts.action_contacts_Client_Apolocontacts">
            <field name="name">Clients</field>
            <field name="model">apolo.client</field>
            <field name="inherit_id" ref="ApoloContacts_partner_base_form_view"/>
            <field name="view_type">form</field>
            
            <field name="arch" type="xml">
            
                
                                
                <xpath expr="//sheet/group/group/field[@name='function']" position="attributes">
                    <attribute name="attrs">{'invisible': [('company_type', '=', 'company')]}</attribute>
                </xpath>
                
                <xpath expr="//sheet/div/div/field[@name='parent_id']" position="attributes">
                    <attribute name="attrs">{'invisible': [('company_type', '=', 'company')]}</attribute>
                </xpath>
                
                <xpath expr="//sheet/group/group/field[@name='title']" position="attributes">
                    <attribute name="attrs">{'invisible': [('company_type', '=', 'company')]}</attribute>
                </xpath>
                
               <xpath expr="//sheet/notebook/page/field/form/sheet/field[@name='type']" position="inside">
                   <field name="type" invisible="1"/>
                </xpath>
                    
                <xpath expr="//sheet/div/h1/field[@name='name']" position="replace">
                  
                </xpath>
                
                <xpath expr="//sheet/div/div/field[@name='parent_id']" position="replace">
                  
                </xpath>

                <xpath expr="//sheet/notebook/page" position="inside">   
                   
                        <page string="horaires d'ouverture">
                            <group col='4'>
                               <group>
                                   <field name="lundi_am" widget="float_time"/>
                                   <field name="mardi_am" widget="float_time"/>       
                                   <field name="mercredi_am" widget="float_time"/>
                                   <field name="jeudi_am" widget="float_time"/>
                                   <field name="vendredi_am" widget="float_time"/>
                                   <field name="samedi_am" widget="float_time"/>                         
                               </group>
                               <group>
                                   <field name="a_lundi_am" widget="float_time"/>
                                   <field name="a_mardi_am" widget="float_time"/>       
                                   <field name="a_mercredi_am" widget="float_time"/>
                                   <field name="a_jeudi_am" widget="float_time"/>
                                   <field name="a_vendredi_am" widget="float_time"/>
                                   <field name="a_samedi_am" widget="float_time"/>
                               </group> 
                               <group>
                                   <field name="lundi_pm" widget="float_time"/>
                                   <field name="mardi_pm" widget="float_time"/>
                                   <field name="mercredi_pm" widget="float_time"/>
                                   <field name="jeudi_pm" widget="float_time"/>
                                   <field name="vendredi_pm" widget="float_time"/>
                                   <field name="samedi_pm" widget="float_time"/>
                               </group>
                               <group>
                                   <field name="a_lundi_pm" widget="float_time"/>
                                   <field name="a_mardi_pm" widget="float_time"/>
                                   <field name="a_mercredi_pm" widget="float_time"/>
                                   <field name="a_jeudi_pm" widget="float_time"/>
                                   <field name="a_vendredi_pm" widget="float_time"/>
                                   <field name="a_samedi_pm" widget="float_time"/>
                               </group>
                               
                            </group>
                        </page>
                        
                    </xpath>
                
                <field name="company_type" position="after">
                    <form>
                        <group>
                            <field name="individu_type" widget="radio" attrs="{'invisible': [('company_type', '=', 'company')], 'required': [('company_type', '=', 'person')]}"/>
                            <group>  
                                   <field name="Praticien" attrs="{'invisible': ['|','|',('Fournisseur', '=', True),('Prospect', '=', True),('Distributeur', '=', True)]}"/>
                                   <field name="Fournisseur" attrs="{'invisible': ['|','|','|',('Praticien', '=', True),('Prospect', '=', True),('Distributeur', '=', True),('company_type', '=', 'person')]}"/>                                  
                               </group>
                               <group>
                                   <field name="Prospect" attrs="{'invisible': ['|','|',('Praticien', '=', True),('Fournisseur', '=', True),('Distributeur', '=', True)]}"/>
                                   <field name="Distributeur" attrs="{'invisible': ['|','|','|',('Praticien', '=', True),('Prospect', '=', True),('Fournisseur', '=', True),('company_type', '=', 'person')]}"/>
                               </group>
                               
                                       <field name="Specialite_ids" options="{&quot;no_open&quot;: True}" attrs="{'invisible': ['|',('Fournisseur', '=', True),('Distributeur', '=', True)]}"/>  
                                       <field name="codeINSEE" attrs="{'invisible': [('individu_type', '=', 'Employe')]}"/>
                                       <field name="Statut" widget="selection" placeholder="Statut Juridique A Renseigner" attrs="{'invisible': [('individu_type', '=', 'Employe')]}"/>
                        </group>                                   
                    </form> 
                    
                    <group>
    
                        <field name="diplome" attrs="{'invisible': [('Praticien', '=', False)]}" string="Diplôme"/>        
                        <field name="annee_diplome" attrs="{'invisible': [('Praticien', '=', False)]}" widget="date" string="Annee d'obtention"/>
                        
                    </group> 
                    
                     
                    <form>
                        <group>
                        
                           <h1><field name="name" placeholder="Nom"/></h1>
                        </group>
                        <group>
                           <h2><field name="Prenom" placeholder="Prénom" attrs="{'invisible': [('company_type', '=', 'company')]}"/></h2>
                    
                           <h3><field name="parent_id" placeholder="Société lié" attrs="{'invisible': [('company_type', '=', 'company')]}"/></h3>
                        </group>              
                    </form>
                       <group>
                            <field name="test_m"/>
                        </group>
                </field>                    
                </field>          
        </record>

