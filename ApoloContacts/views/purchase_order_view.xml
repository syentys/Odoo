<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="ApoloContacts_purchase_order_form" model="ir.ui.view">
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="model">purchase.order</field>
            <field name="arch" type="xml">
            
            <xpath expr="//sheet/group/group/field[@name='partner_id']" position="attributes">
                <attribute name="context">{'default_is_company':True,'default_supplier':True}</attribute>
            </xpath>
            
            
            </field>
        </record>
        
        <record id="view_purchase_order_filter" model="ir.ui.view">
            <field name="inherit_id" ref="purchase.view_purchase_order_filter"/>
            <field name="model">purchase.order</field>
            <field name="arch" type="xml">
            
            <xpath expr="/search/group/filter[1]" position="attributes">
                <attribute name="name">group_vendor</attribute>
            </xpath>
            

            </field>
        </record>
        
        <record id="purchase.purchase_form_action" model="ir.actions.act_window">
            <field name="name">Purchase Orders</field>
            <field name="res_model">purchase.order</field>
            <field name="context">{'search_default_todo':1, 'show_purchase': True, 'search_default_group_vendor': True}</field>
        </record>
</odoo>


